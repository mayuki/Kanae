<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Title - Kanae</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/vnd.microsoft.icon" href="/favicon.ico?rev=1" />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans:300" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/external")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/knockout")
    @RenderSection("scripts", required: false)

    @if (IsSectionDefined("LocalResources"))
    {
        <!-- local-resources -->
        @RenderSection("LocalResources", required: false)
        <!-- /local-resources -->
    }
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand"><img alt="Kanae" src="~/Content/Images/logo_01.png" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("KanaeUsers"))
                    {
                        <li class="@(IsCurrentController("Manage") || IsCurrentController("Draw") ? "active" : "")">@Html.ActionLink("Manage", "Index", "Manage")</li>
                        <li class="@(IsCurrentController("Upload") ? "active" : "")">@Html.ActionLink("Upload", "Index", "Upload")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
</body>
</html>
